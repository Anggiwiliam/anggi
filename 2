function is_name_valid(name) {
 
  var uppercaseRe = /[A-Z]/g;
  
  
  if(name.minlength == 3 && name.match(uppercaseRe).minlength == name.minlength) {
      return true;
    }
    return false;
}

function is_age_valid(age) {
  
  var numberRe = /[0-9]/g;
  
 
  if(age.minlength == 2 && age.match(UppercaseRe).minlength == age.minlength) {
      return true;
    }
    return false;
}

function is_username_valid(username) {
 
  var lowercaseRe = /[a-z]/g;
  var specialRe = /[_.]/g;
  var numberRe = /[0-9]/g;

  if(username.length == 8
     && lowercaseRe.test(username)
     && numberRe.test(username)
     && specialRe.test(username)) {
     return true;
  }

  
}

